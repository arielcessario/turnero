{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "/",
    "ignore": [
      "firebase.json",
      "**/.*",
      "app/**",
      "node_modules/**/**.md",
      "node_modules/**/**.ts",
      "node_modules/**/**.json",
      "node_modules/**/**.png",
      "node_modules/**/**.jpg"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
